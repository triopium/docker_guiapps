# TODO: ban root account logging
FROM ubuntu

# ADD APPS
RUN apt-get -y update \
	&& apt-get -y install xauth \
	emacs \
	vifm 

# USER CREATE
ARG MY_USER
ARG MY_GROUP
ARG MY_UID
ARG MY_GID
RUN useradd -m -s /bin/bash -u $MY_UID $MY_USER
WORKDIR "/home/$MY_USER"
ADD  ./emacs.d/ ./.emacs.d/
RUN chown -R "$MY_USER":"$MY_GROUP" ./.emacs.d/
# --chown=myuser:mygroup 

# MODIFY USER
USER  $MY_USER


